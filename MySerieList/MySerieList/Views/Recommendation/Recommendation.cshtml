
@model RecommendationViewModel

<script type="text/javascript">
        $(document).ready(function () {
            $('#serieid2').click(function () {
                var serieid2 = $('#name').val();
                document.getElementById("test").value = serieid2;
            });
        });
</script>



<div class="container">
    <h1 class="my-4">
        Recommendations
        <small>Secondary Text</small>
    </h1>
    <div class="container">
        
        <button type="button" style="float:right" class="btn btn-danger navbar-btn" data-toggle="modal" data-target="#myModal">Open Modal</button>
        <div class="card-deck">
           @{ 
               var identity = (System.Security.Claims.ClaimsIdentity)Context.User.Identity;
               int id = Convert.ToInt32(identity.Claims.FirstOrDefault(c => c.Type == "id").Value);
               foreach (var recommendation in Model.GetRecommendations)
               {

                    <div class="row">
                        <div class="col-md-7">
                            <a href="#">
                                <img class="img-fluid rounded mb-3 mb-md-0" src="http://placehold.it/700x300" alt="">
                            </a>
                        </div>
                        <div class="col-md-5">
                            <h3>@recommendation.Name</h3>
                            <p>@recommendation.Description</p>
                            <p>This Serie is recommenden by ... users</p>
                        </div>
                    </div>
                            <hr>

                   }


               }


        </div>
    </div>
    <form asp-action="Recommendation" asp-controller="Recommendation" method="post">
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Modal Header</h4>
                    </div>
                    <div class="modal-body">

                        <select id="name" asp-for="@Model.CreateRecommendation.Name">
                            @foreach (var seriename in Model.GetSerieNames)
                            {
                                <option value="@seriename.id">@seriename.name </option>
                              
                                

                            }

                        </select>
    
                            Description: <input type="text" asp-for="@Model.CreateRecommendation.Description" /> <br>

                        <input type="text" asp-for="@Model.CreateRecommendation.Userid" value="@id" readonly hidden /> <br>
                           <input type="text" asp-for="@Model.CreateRecommendation.Serieid1" value="@Model.Serieid" readonly hidden /> <br>

                            <input type="text" asp-for="@Model.CreateRecommendation.Serieid2"  id="test" readonly hidden /> <br>

                        </div>
   
                       <div class="modal-footer">
                        <input type="submit" value="Create" class="btn btn-primary" id="serieid2" />
                    </div>
                </div>

            </div>
        </div>
    </form>
    <ul class="pagination justify-content-center">
        <li class="page-item"foreach>
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">1</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">2</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">3</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>

</div>
