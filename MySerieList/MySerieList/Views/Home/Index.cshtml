@model WatchListViewModel
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Small Business - Start Bootstrap Template</title>

   

</head>

<body>
    <h1>Welcome to MySerieList</h1>     

   <br />
    <!-- Navigation -->
   
    <!-- Page Content -->
    <div class="container">

        <!-- Heading Row -->
        <div class="row my-4">
            <div class="col-lg-8">
                
                <img src="~/images/testbootstrap.png" alt="http://placehold.it/900x400" height="300" width="700" >
            </div>
            <!-- /.col-lg-8 -->
        @try
        {
            var serie1 = Model.MostPopularSeries.FirstOrDefault();
            <div class="col-lg-4">
                <h1>The most popular serie on MySerieList is: @serie1.Name</h1>
                <p>@serie1.Description</p>
                <a class="btn btn-primary" asp-controller="SeriePage" asp-action="Page" asp-route-id="@serie1.Id">Go to serie page!</a>
            </div>
        }
        catch
        {
            <p>None...Actually. An admin has managed to delete every serie from our system. If you see this you have witnessed something very rare, congratulations. Dont worry it will be fixed!</p>
        }
            <!-- /.col-md-4 -->
        </div><br /><br /><br />
        <!-- /.row -->
        <!-- Call to Action Well -->
       
        
        <!-- Content Row -->
        <div class="row">
            @try
            {
                var serie2 = Model.MostPopularSeries.ElementAt(1);
                <h1>Most popular series</h1>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <img src="~/images/testbootstrap.png" alt="http://placehold.it/900x400" height="200" width="348">
                        <h2 class="card-title">@serie2.Name</h2>
                        <p class="card-text">@serie2.Description</p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary" asp-controller="SeriePage" asp-action="Page" asp-route-id="@serie2.Id">Go to serie page!</a>
                    </div>
                </div>
            </div>
            }
            catch { }
            <!-- /.col-md-4 -->
            @try
            {
                var serie3 = Model.MostPopularSeries.ElementAt(2);
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h2 class="card-title">@serie3.Name</h2>
                        <p class="card-text">@serie3.Description</p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary" asp-controller="SeriePage" asp-action="Page" asp-route-id="@serie3.Id">Go to serie page!</a>
                    </div>
                </div>
            </div>
            }
            catch { }
            <!-- /.col-md-4 -->
            @try
            {
                var serie4 = Model.MostPopularSeries.ElementAt(3);
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h2 class="card-title">@serie4.Name</h2>
                        <p class="card-text">@serie4.Description</p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary" asp-controller="SeriePage" asp-action="Page" asp-route-id="@serie4.Id">Go to serie page!</a>
                    </div>
                </div>
            </div>
            <!-- /.col-md-4 -->
            }
            catch { }

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->
    <!-- Footer -->
   

</body>

</html>
